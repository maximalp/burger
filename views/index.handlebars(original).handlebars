<h1 id="headburg">Burgers!</h1>



<div class="container is-fluid">
  <ul>

    {{#each burgers}}

         <li>
          {{#if this.devoured}}
            <div class="level is-pulled-right">
            <div class="dev" id="dev">
            <p>{{this.id}} {{this.burger_name}}</p>
            </div>
          </div>

    {{else}}
      <div class="column">
      <div class="nonDev">
        <p>{{this.id}}  {{this.burger_name}}</p> <button id="devour" data-id={{this.id}} class="button is-danger is-medium" type="submit">Devour</button>
      </div>
    </div>
    {{/if}}

    </li>
    {{/each}}

  </ul>
</div>


<div class="columns">
  <div class-"column is-one-third">
    <form class="create-form">

      <div class="form-group">
        <label for="newBurger">Enter a burger you want to eat:</label>
        <input type="text" id="newBurger" name="name">
      </div>

      <button class="button is-danger is-outlined" type="submit">Submit</button>

    </form>
</div>
</div>

</div> <!-- end container -->

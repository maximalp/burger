
<div class="container">

  <div class="block -burger">
    <div class="columns">
      <div class="column is-4">
          <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
            <li>
              <div>
                <div class="devourdiv">
                  <div class="buttons">
                    <span class="button is-static">{{this.id}} {{this.burger_name}}</span>

                    <span data-id={{this.id}} class="button is-danger submit">Devour</span>
                  </div>

                </div>
              </div>
          </li>
              <br>
              {{/unless}}
              {{/each}}
            </ul>

      </div>
      <div class="column is-4 is-vertical" id="burgerDiv">
          <img id="burgerImage" src="/assets/img/burger2.png">
      </div>
      <div class="column is-4 is-justify-right" id="rightBurgers">
        <ul>
          {{#each burgers}}
          {{#if this.devoured}}
          <li>
            <article class="message is-danger is-small">
              <div class="message-body has-text-centered">
              You devoured the: <strong> {{this.id}} {{this.burger_name}}</strong>
              </div>
            </article>
          </li>
          <br>
          {{/if}}
          {{/each}}
        </ul>
      </div>

    </div>
  </div>

  <div class="block">
    <div class="columns">
      <div class="column">
      </div>
        <div class="column is-4 has-text-centered">
          <h1  class="title is-danger" id="headburg">Eat Da' Burger!</h1>
        </div>
      <div class="column">
     </div>
    </div>
  </div>

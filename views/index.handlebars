<section class="newBurgerArea">
  <div class="columns">

    <div class="column is-4">
    </div>
    <div class="column is-4 has-text-centered">

    <form class="has-text-centered" id="newBurger">

      <div class="field">
        <label class="label"></label>
        <div class="control">
        <input id="newBurgerName" class="input" type="text" placeholder="More burgers!">
        <br>
        </div>

        <div class="has-text-centered">
            <button class="button is-danger is-outlined is-6" type="submit">Nom</button>
        </div>
        <p class="help has-text-centered is-size-6">Enter a burger you'd like to consume and then click the "nom" button.</p>
    </div>

    <div class="column is-4">
    </div>

  </form>

  </div>
</div>


</section>

